<script type='text/javascript'>
  function addnewrow(section)
  {
    var table = document.getElementById(section);
    var row = table.insertRow();
    var cell1 = row.insertCell(0);
    var cell2 = row.insertCell(1);
    var cell3 = row.insertCell(2);
    var cell4 = row.insertCell(3);
    var cell5 = row.insertCell(4);
    var cell6 = row.insertCell(5);
    var cell7 = row.insertCell(6);

    var text = document.createElement('input');
    text.type = "text";

    var num = document.createElement('input');
    num.type = "number";

    var num1 = document.createElement('input');
    num1.type = "number";

    var num2 = document.createElement('input');
    num2.type = "number";

    var num3 = document.createElement('input');
    num3.type = "number";

    var num4 = document.createElement('input');
    num4.type = "number";

    var num5 = document.createElement('input');
    num5.type = "number";

    cell1.appendChild(text);
    cell2.appendChild(num);
    cell3.appendChild(num1);
    cell4.appendChild(num2);
    cell5.appendChild(num3);
    cell6.appendChild(num4);
    cell7.appendChild(num5);
    
  }
  </script>

